// src/components/DashboardEnhanced.tsx
import React, { useState, useEffect } from 'react';
import { 
  Box, 
  Grid, 
  Card, 
  CardContent, 
  Typography, 
  Button, 
  LinearProgress,
  Tabs,
  Tab,
  Chip,
  IconButton,
  Menu,
  MenuItem,
  useTheme
} from '@mui/material';
import { 
  TrendingUp, 
  TrendingDown, 
  MoreVert, 
  Add as AddIcon,
  Refresh as RefreshIcon,
  FilterList as FilterIcon,
  Science as ScienceIcon
} from '@mui/icons-material';
import { useNavigate } from 'react-router-dom';
import {
  LineChart,
  Line,
  XAxis,
  YAxis,
  CartesianGrid,
  Tooltip,
  Legend,
  ResponsiveContainer,
  PieChart,
  Pie,
  Cell,
  BarChart,
  Bar
} from 'recharts';
import { motion } from 'framer-motion';

const DashboardEnhanced: React.FC = () => {
  const theme = useTheme();
  const navigate = useNavigate();
  const [tabValue, setTabValue] = useState(0);
  const [anchorEl, setAnchorEl] = useState(null);
  const [loading, setLoading] = useState(true);
  const [stats, setStats] = useState({
    totalProjects: 0,
    activeAgents: 0,
    completedTasks: 0,
    systemDeployments: 0,
    syntheticDataGenerated: 0,
    simulationsRun: 0
  });
  const [recentProjects, setRecentProjects] = useState([]);
  const [systemHealth, setSystemHealth] = useState([]);
  const [resourceUsage, setResourceUsage] = useState([]);
  const [syntheticDataStats, setSyntheticDataStats] = useState([]);
  const [simulationStats, setSimulationStats] = useState([]);

  useEffect(() => {
    // Simulate API call
    const fetchData = async () => {
      setLoading(true);
      // In a real app, this would be API calls
      setTimeout(() => {
        setStats({
          totalProjects: 12,
          activeAgents: 8,
          completedTasks: 127,
          systemDeployments: 5,
          syntheticDataGenerated: 42,
          simulationsRun: 18
        });
        
        setRecentProjects([
          { id: 1, name: 'Portfolio Optimization', status: 'Completed', date: '2023-06-15', syntheticData: true },
          { id: 2, name: 'Drug Discovery', status: 'In Progress', date: '2023-06-18', syntheticData: true },
          { id: 3, name: 'Climate Modeling', status: 'Draft', date: '2023-06-20', syntheticData: false },
          { id: 4, name: 'Supply Chain', status: 'In Progress', date: '2023-06-22', syntheticData: true }
        ]);
        
        setSystemHealth([
          { name: 'CPU Usage', value: 65 },
          { name: 'Memory', value: 45 },
          { name: 'Storage', value: 30 },
          { name: 'Network', value: 20 }
        ]);
        
        setResourceUsage([
          { name: 'Jan', quantum: 40, ai: 24, synthetic: 10 },
          { name: 'Feb', quantum: 30, ai: 13, synthetic: 15 },
          { name: 'Mar', quantum: 20, ai: 98, synthetic: 25 },
          { name: 'Apr', quantum: 27, ai: 39, synthetic: 30 },
          { name: 'May', quantum: 18, ai: 48, synthetic: 35 },
          { name: 'Jun', quantum: 23, ai: 38, synthetic: 40 }
        ]);
        
        setSyntheticDataStats([
          { name: 'Tabular', value: 15 },
          { name: 'Time Series', value: 10 },
          { name: 'Image', value: 8 },
          { name: 'Text', value: 5 },
          { name: 'Graph', value: 3 },
          { name: 'Quantum State', value: 1 }
        ]);
        
        setSimulationStats([
          { name: 'Quantum Circuit', value: 8 },
          { name: 'Market Dynamics', value: 5 },
          { name: 'Biological System', value: 3 },
          { name: 'Climate Model', value: 1 },
          { name: 'Network Traffic', value: 1 }
        ]);
        
        setLoading(false);
      }, 1000);
    };
    
    fetchData();
  }, []);

  const handleTabChange = (event, newValue) => {
    setTabValue(newValue);
  };

  const handleMenuClick = (event) => {
    setAnchorEl(event.currentTarget);
  };

  const handleMenuClose = () => {
    setAnchorEl(null);
  };

  const getStatusColor = (status) => {
    switch (status) {
      case 'Completed': return 'success';
      case 'In Progress': return 'info';
      case 'Draft': return 'warning';
      default: return 'default';
    }
  };

  const systemHealthColors = ['#0088FE', '#00C49F', '#FFBB28', '#FF8042'];
  const syntheticDataColors = ['#4a00e0', '#8e2de2', '#339af0', '#51cf66', '#ffd43b', '#ff6b6b'];
  const simulationColors = ['#4a00e0', '#8e2de2', '#339af0', '#51cf66', '#ff6b6b'];

  if (loading) {
    return (
      <Box sx={{ width: '100%', mt: 4 }}>
        <LinearProgress />
      </Box>
    );
  }

  return (
    <Box sx={{ p: 3 }}>
      <Box sx={{ display: 'flex', justifyContent: 'space-between', alignItems: 'center', mb: 3 }}>
        <Typography variant="h4" fontWeight="bold">
          Dashboard
        </Typography>
        <Box>
          <Button 
            variant="outlined" 
            startIcon={<RefreshIcon />}
            sx={{ mr: 1 }}
          >
            Refresh
          </Button>
          <Button 
            variant="contained" 
            startIcon={<AddIcon />}
            onClick={() => navigate('/designer')}
          >
            New Project
          </Button>
        </Box>
      </Box>

      <Grid container spacing={3}>
        {/* Stats Cards */}
        <Grid item xs={12} sm={6} md={3}>
          <motion.div
            initial={{ opacity: 0, y: 20 }}
            animate={{ opacity: 1, y: 0 }}
            transition={{ duration: 0.5 }}
          >
            <Card sx={{ height: '100%', borderRadius: 2, boxShadow: '0 4px 12px rgba(0,0,0,0.05)' }}>
              <CardContent>
                <Box sx={{ display: 'flex', justifyContent: 'space-between', alignItems: 'center' }}>
                  <Box>
                    <Typography color="textSecondary" gutterBottom>
                      Total Projects
                    </Typography>
                    <Typography variant="h4" component="div" fontWeight="bold">
                      {stats.totalProjects}
                    </Typography>
                  </Box>
                  <TrendingUp color="primary" />
                </Box>
              </CardContent>
            </Card>
          </motion.div>
        </Grid>
        
        <Grid item xs={12} sm={6} md={3}>
          <motion.div
            initial={{ opacity: 0, y: 20 }}
            animate={{ opacity: 1, y: 0 }}
            transition={{ duration: 0.5, delay: 0.1 }}
          >
            <Card sx={{ height: '100%', borderRadius: 2, boxShadow: '0 4px 12px rgba(0,0,0,0.05)' }}>
              <CardContent>
                <Box sx={{ display: 'flex', justifyContent: 'space-between', alignItems: 'center' }}>
                  <Box>
                    <Typography color="textSecondary" gutterBottom>
                      Active Agents
                    </Typography>
                    <Typography variant="h4" component="div" fontWeight="bold">
                      {stats.activeAgents}
                    </Typography>
                  </Box>
                  <TrendingUp color="primary" />
                </Box>
              </CardContent>
            </Card>
          </motion.div>
        </Grid>
        
        <Grid item xs={12} sm={6} md={3}>
          <motion.div
            initial={{ opacity: 0, y: 20 }}
            animate={{ opacity: 1, y: 0 }}
            transition={{ duration: 0.5, delay: 0.2 }}
          >
            <Card sx={{ height: '100%', borderRadius: 2, boxShadow: '0 4px 12px rgba(0,0,0,0.05)' }}>
              <CardContent>
                <Box sx={{ display: 'flex', justifyContent: 'space-between', alignItems: 'center' }}>
                  <Box>
                    <Typography color="textSecondary" gutterBottom>
                      Synthetic Data
                    </Typography>
                    <Typography variant="h4" component="div" fontWeight="bold">
                      {stats.syntheticDataGenerated}
                    </Typography>
                  </Box>
                  <ScienceIcon color="primary" />
                </Box>
              </CardContent>
            </Card>
          </motion.div>
        </Grid>
        
        <Grid item xs={12} sm={6} md={3}>
          <motion.div
            initial={{ opacity: 0, y: 20 }}
            animate={{ opacity: 1, y: 0 }}
            transition={{ duration: 0.5, delay: 0.3 }}
          >
            <Card sx={{ height: '100%', borderRadius: 2, boxShadow: '0 4px 12px rgba(0,0,0,0.05)' }}>
              <CardContent>
                <Box sx={{ display: 'flex', justifyContent: 'space-between', alignItems: 'center' }}>
                  <Box>
                    <Typography color="textSecondary" gutterBottom>
                      Simulations Run
                    </Typography>
                    <Typography variant="h4" component="div" fontWeight="bold">
                      {stats.simulationsRun}
                    </Typography>
                  </Box>
                  <TrendingUp color="primary" />
                </Box>
              </CardContent>
            </Card>
          </motion.div>
        </Grid>

        {/* Charts */}
        <Grid item xs={12} md={8}>
          <Card sx={{ borderRadius: 2, boxShadow: '0 4px 12px rgba(0,0,0,0.05)' }}>
            <CardContent>
              <Box sx={{ display: 'flex', justifyContent: 'space-between', alignItems: 'center', mb: 2 }}>
                <Typography variant="h6" fontWeight="bold">
                  Resource Usage
                </Typography>
                <IconButton onClick={handleMenuClick}>
                  <MoreVert />
                </IconButton>
                <Menu
                  anchorEl={anchorEl}
                  open={Boolean(anchorEl)}
                  onClose={handleMenuClose}
                >
                  <MenuItem onClick={handleMenuClose}>Last 7 days</MenuItem>
                  <MenuItem onClick={handleMenuClose}>Last 30 days</MenuItem>
                  <MenuItem onClick={handleMenuClose}>Last 90 days</MenuItem>
                </Menu>
              </Box>
              <Box sx={{ height: 300 }}>
                <ResponsiveContainer width="100%" height="100%">
                  <BarChart
                    data={resourceUsage}
                    margin={{
                      top: 5,
                      right: 30,
                      left: 20,
                      bottom: 5,
                    }}
                  >
                    <CartesianGrid strokeDasharray="3 3" />
                    <XAxis dataKey="name" />
                    <YAxis />
                    <Tooltip />
                    <Legend />
                    <Bar dataKey="quantum" fill="#3b5bdb" name="Quantum Resources" />
                    <Bar dataKey="ai" fill="#339af0" name="AI Resources" />
                    <Bar dataKey="synthetic" fill="#51cf66" name="Synthetic Intelligence" />
                  </BarChart>
                </ResponsiveContainer>
              </Box>
            </CardContent>
          </Card>
        </Grid>

        <Grid item xs={12} md={4}>
          <Card sx={{ borderRadius: 2, boxShadow: '0 4px 12px rgba(0,0,0,0.05)' }}>
            <CardContent>
              <Typography variant="h6" fontWeight="bold" sx={{ mb: 2 }}>
                System Health
              </Typography>
              <Box sx={{ height: 300 }}>
                <ResponsiveContainer width="100%" height="100%">
                  <PieChart>
                    <Pie
                      data={systemHealth}
                      cx="50%"
                      cy="50%"
                      labelLine={false}
                      outerRadius={80}
                      fill="#8884d8"
                      dataKey="value"
                      label={({ name, percent }) => `${name}: ${(percent * 100).toFixed(0)}%`}
                    >
                      {systemHealth.map((entry, index) => (
                        <Cell key={`cell-${index}`} fill={systemHealthColors[index % systemHealthColors.length]} />
                      ))}
                    </Pie>
                    <Tooltip />
                  </PieChart>
                </ResponsiveContainer>
              </Box>
            </CardContent>
          </Card>
        </Grid>

        {/* Synthetic Intelligence Stats */}
        <Grid item xs={12} md={6}>
          <Card sx={{ borderRadius: 2, boxShadow: '0 4px 12px rgba(0,0,0,0.05)' }}>
            <CardContent>
              <Typography variant="h6" fontWeight="bold" sx={{ mb: 2 }}>
                Synthetic Data Generation
              </Typography>
              <Box sx={{ height: 300 }}>
                <ResponsiveContainer width="100%" height="100%">
                  <PieChart>
                    <Pie
                      data={syntheticDataStats}
                      cx="50%"
                      cy="50%"
                      labelLine={false}
                      outerRadius={80}
                      fill="#8884d8"
                      dataKey="value"
                      label={({ name, percent }) => `${name}: ${(percent * 100).toFixed(0)}%`}
                    >
                      {syntheticDataStats.map((entry, index) => (
                        <Cell key={`cell-${index}`} fill={syntheticDataColors[index % syntheticDataColors.length]} />
                      ))}
                    </Pie>
                    <Tooltip />
                  </PieChart>
                </ResponsiveContainer>
              </Box>
            </CardContent>
          </Card>
        </Grid>

        <Grid item xs={12} md={6}>
          <Card sx={{ borderRadius: 2, boxShadow: '0 4px 12px rgba(0,0,0,0.05)' }}>
            <CardContent>
              <Typography variant="h6" fontWeight="bold" sx={{ mb: 2 }}>
                Simulation Types
              </Typography>
              <Box sx={{ height: 300 }}>
                <ResponsiveContainer width="100%" height="100%">
                  <PieChart>
                    <Pie
                      data={simulationStats}
                      cx="50%"
                      cy="50%"
                      labelLine={false}
                      outerRadius={80}
                      fill="#8884d8"
                      dataKey="value"
                      label={({ name, percent }) => `${name}: ${(percent * 100).toFixed(0)}%`}
                    >
                      {simulationStats.map((entry, index) => (
                        <Cell key={`cell-${index}`} fill={simulationColors[index % simulationColors.length]} />
                      ))}
                    </Pie>
                    <Tooltip />
                  </PieChart>
                </ResponsiveContainer>
              </Box>
            </CardContent>
          </Card>
        </Grid>

        {/* Recent Projects */}
        <Grid item xs={12}>
          <Card sx={{ borderRadius: 2, boxShadow: '0 4px 12px rgba(0,0,0,0.05)' }}>
            <CardContent>
              <Box sx={{ display: 'flex', justifyContent: 'space-between', alignItems: 'center', mb: 2 }}>
                <Typography variant="h6" fontWeight="bold">
                  Recent Projects
                </Typography>
                <Button 
                  variant="outlined" 
                  startIcon={<FilterIcon />}
                  size="small"
                >
                  Filter
                </Button>
              </Box>
              
              <Box sx={{ overflowX: 'auto' }}>
                <Box sx={{ minWidth: 800 }}>
                  {recentProjects.map((project) => (
                    <Box 
                      key={project.id} 
                      sx={{ 
                        display: 'flex', 
                        justifyContent: 'space-between', 
                        alignItems: 'center', 
                        py: 2, 
                        borderBottom: '1px solid',
                        borderColor: 'divider'
                      }}
                    >
                      <Box>
                        <Typography variant="subtitle1" fontWeight="medium">
                          {project.name}
                        </Typography>
                        <Typography variant="body2" color="textSecondary">
                          {project.date}
                        </Typography>
                      </Box>
                      <Box sx={{ display: 'flex', alignItems: 'center', gap: 1 }}>
                        {project.syntheticData && (
                          <Chip 
                            label="SI" 
                            size="small" 
                            color="primary" 
                            icon={<ScienceIcon fontSize="small" />}
                          />
                        )}
                        <Chip 
                          label={project.status} 
                          color={getStatusColor(project.status)} 
                          size="small"
                        />
                      </Box>
                    </Box>
                  ))}
                </Box>
              </Box>
            </CardContent>
          </Card>
        </Grid>
      </Grid>
    </Box>
  );
};

export default DashboardEnhanced;
